.social__links {
    display: flex;
    &-list {
        display: flex; 
        padding-top: 51px;
        &--header {
            margin-right: 51px;
        }
        &--socials {
            @include predesktop {
                grid-area: socials;
            }
        }
        &--phone{
            margin-right: 51px;
            @include predesktop {
                grid-area: phonelist;
            }
        }
        &--footer {
            margin: 0 auto;
        }
        
    }
    &-item {
        margin-right: 10px;
        cursor: pointer;
        &:last-child {
            margin-right: 0;
        }
    }
    &-link {
        &-icon {
            width: 21px;
            height: 21px;
            fill: #fff;
            &--whatsup {
                fill: #47D25C;
            }
            &--viber {
                fill: #D536FD;
            }
        }
    }
    &-text {
        white-space: nowrap;
        &--footer {
            margin: 20px auto 0;
        }
    }
    &--header {
        padding-top: 51px;
        margin-right: 109px;
    }
}